    ul.pagination__list 
      li.pagination__item 
        a(href="#").pagination__link
          svg.icon
            use(xlink:href='./img/icons/sprite.svg#left-arrow')
      li.pagination__item 
        a(href="#").pagination__link.is-active 1
      li.pagination__item 
        a(href="#").pagination__link 2
      li.pagination__item 
        a(href="#").pagination__link 3
      li.pagination__item 
        a(href="#").pagination__link 4
      li.pagination__item 
        a(href="#").pagination__link 5
      li.pagination__item 
        a(href="#").pagination__link 6
      li.pagination__item 
        a(href="#").pagination__link ...
      li.pagination__item 
        a(href="#").pagination__link 36
      li.pagination__item 
        a(href="#").pagination__link
          svg.icon
            use(xlink:href='./img/icons/sprite.svg#right-arrow')

mixin recipe-block(type, content)
  a(href="#").recipe-block
    .recipe-block__mask
    .recipe-block__image
      .image.image_cover
        if type==1
          img(data-src="./img/recipe1.jpg", alt="image").lazyload
        else 
          img(data-src="./img/recipe2.jpg", alt="image").lazyload
    .recipe-block__text 
      .recipe-block__title 
        if type==2 
          | Карамелизованная морковь с кешью кремом
        else 
          | Салат с киноа, авокадо и шампиньонами
      if content !== '2'
        .recipe-info 
          .recipe-info__item 
            svg.icon(viewBox="0 0 21 21")
              use(xlink:href='./img/icons/sprite.svg#wall-clock')
            | 1 час
          .recipe-info__item 
            svg.icon(viewBox="0 0 29 20")
              use(xlink:href='./img/icons/sprite.svg#dish')
            | 320 ккал


mixin recipe-day()
  a(href="#").recipe-day
    .recipe-day__text-content 
      h6.recipe-day__title Рецепт дня
      p.recipe-day__text Яблочный кекс с вяленой клюквой и штрейзелем
    .recipe-day__bottom 
      .recipe-info.recipe-day__info 
        .recipe-info__item 
          svg.icon(viewBox="0 0 21 21")
            use(xlink:href='./img/icons/sprite.svg#wall-clock')
          | 1 час
        .recipe-info__item 
          svg.icon(viewBox="0 0 29 20")
            use(xlink:href='./img/icons/sprite.svg#dish')
          | 320 ккал
      
      .recipe-day__images 
        .recipe-day__dish.image.image_cover
          img(data-src="./img/Rectangle 311.jpg", alt="image").lazyload
        .recipe-day__product.image.image_contain
          img(data-src="./img/categories/1.png", alt="image").lazyload