extends layout/layout

block variables
  -var page_title = 'Блог'
  -var title = sitename + ' - ' + page_title

block content
  include blocks/components

  -var breadcrumbs_links = ['Главная', page_title]
  include blocks/breadcrumbs

  section.section.blog-section(data-tabs='parent')
    .container 
      .section__head
        h1.section__title Блог

      .tab-head.blog-section__tab-head
        .tab-head__container
          a(href="javascript:void(0);" data-tabs='link').tab-head__link.is-active Рецепты
