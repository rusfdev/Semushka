extends layout/layout

block variables
  -var page_title = 'Каталог'
  -var title = sitename + ' - ' + page_title

block content
  include blocks/components

  -var breadcrumbs_links = ['Главная', 'Продукция', page_title]
  include blocks/breadcrumbs

  section.section.catalogue
    .container 
      .section__head
        h1.section__title Каталог
      .catalogue__wrapper 
        aside.catalogue__aside

          .catalogue-filter
            .catalogue-filter__head 
              .container
                button(aria-label='filter close').close-button.catalogue-filter-close
            .catalogue-filter__container(data-scroll-lock-scrollable)
              .container

                .catalogue-filter__box(data-toggle="group")
                  //category
                  .catalogue-filter__category(data-toggle="parent")
                    a(href="javascript:void(0);" data-toggle="trigger").catalogue-filter__category-head
                      span Орехи
                      svg.icon
                        use(xlink:href='./img/icons/sprite.svg#drop-arrow')
                    .catalogue-filter__category-content(data-toggle="content")

                      .catalogue-filter__category-element 
                        a(href="#") Дочерняя ссылка 1 
                      .catalogue-filter__category-element
                        a(href="#") Дочерняя ссылка 2
                      .catalogue-filter__category-element 
                        a(href="#") Дочерняя ссылка 3
                      .catalogue-filter__category-element
                        a(href="#") Дочерняя ссылка 4

                  //category
                  .catalogue-filter__category(data-toggle="parent")
                    a(href="javascript:void(0);" data-toggle="trigger").catalogue-filter__category-head
                      span Шоколад и мармелад
                      svg.icon
                        use(xlink:href='./img/icons/sprite.svg#drop-arrow')
                    .catalogue-filter__category-content(data-toggle="content")

                      .catalogue-filter__category-element 
                        a(href="#") Дочерняя ссылка 1 
                      .catalogue-filter__category-element
                        a(href="#") Дочерняя ссылка 2
                      .catalogue-filter__category-element 
                        a(href="#") Дочерняя ссылка 3
                      .catalogue-filter__category-element
                        a(href="#") Дочерняя ссылка 4

                  //category    
                  .catalogue-filter__category 
                    a(href="javascript:void(0);").catalogue-filter__category-head.is-active
                      span Смеси

                  //category    
                  .catalogue-filter__category 
                    a(href="javascript:void(0);").catalogue-filter__category-head
                      span Семечки

                  //category
                  .catalogue-filter__category
                    a(href="javascript:void(0);").catalogue-filter__category-head
                      span Сладости
                  
                  //category
                  .catalogue-filter__category 
                    a(href="javascript:void(0);").catalogue-filter__category-head
                      span Наборы

                .catalogue-filter__box
                  .catalogue-filter__category 
                    .catalogue-filter__category-head
                      span Статус товара

                    .catalogue-filter__category-content
                      .catalogue-filter__category-element
                        +checkbox('В наличии')
                      .catalogue-filter__category-element
                        +checkbox('Новинка')
                      .catalogue-filter__category-element
                        +checkbox('Акция')
                      .catalogue-filter__category-element
                        +checkbox('Скидка')
                      .catalogue-filter__category-element
                        +checkbox('Хит продаж')
            


            //button
            //button.button.button_style-1.catalogue-filter__close-button(data-filter-close)
              span Применить фильтр


        .catalogue__content
          .catalogue__head 
            button(aria-label='open-filter').button.button_style-1.catalogue-filter-open
              span Фильтр товаров

            a.button.reset-button.catalogue__head-reset
              svg.icon
                use(xlink:href='./img/icons/sprite.svg#filter-reset')
              span Сбросить фильр

            select.select
              option По умолчанию
              option От дешевых к дорогим
              option От дорогих к дешевым
              
          .catalogue__items
            include blocks/components
            +product-card(1)
            +product-card(2)
            +product-card(3)
            +product-card(1)
            +product-card(1)
            +product-card(2)
            +product-card(3)
            +product-card(1)
            +product-card(1)
            +product-card(2)
            +product-card(1)
            +product-card(2)
            +product-card(3)
            +product-card(1)
            +product-card(1)
            +product-card(2)
          +pagination(1)
          .load-more 
            a(href="#").button.button_style-2
              span Загрузить еще 

  include blocks/product-slider