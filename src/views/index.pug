extends layout/layout

block variables
  -var title = sitename + ' - Главная'

block content
  include blocks/components

  section.section.home-screen-banner.swiper(data-auto-play='50000')
    .swiper-container
      .swiper-wrapper
        mixin banner-slide()
          //slide
          .swiper-slide.image.image_cover.home-screen-banner__slide 
            img(data-src="./img/Banners_1920x460_1 1.jpg", alt="image").swiper-lazy
            .container.home-screen-banner__slide-container 
              .home-screen-banner__slide-text-content
                h2.h1.home-screen-banner__slide-title Летняя акция
                p.home-screen-banner__slide-text Скидка 30% на все сухофрукты и орехи 
              a(href="#").button.button_style-1 
                span Подробнее 
        
        +banner-slide()
        +banner-slide()
        +banner-slide()

      .swiper-pagination

    .advantages-line.home-screen-banner__advantages-line
      .container.advantages-line__container
        .advantages-line__element 
          img(src="./img/icons/quality.svg", alt="icon").icon
          p Высокое качество<br> продукции
        .advantages-line__element 
          img(src="./img/icons/packaging ecology.svg", alt="icon").icon
          p Экологичная<br> упаковка
        .advantages-line__element 
          img(src="./img/icons/oak.svg", alt="icon").icon
          p Собственное<br> производство
        .advantages-line__element 
          img(src="./img/icons/selection.svg", alt="icon").icon
          p Широкий<br> ассортимент

  include blocks/product-slider

  section.section.parallax-product-slider.swiper
    .parallax-product-slider__background.image.image_cover
      img(data-src="./img/Frame 1.png", alt="image").lazyload

    .container 
      .section__head.section__head_with-button
        h2.section__title.section__title_with-button Наша продукция
        a(href="./katalog.html").button.button_style-2.button_arrow
          span Смотреть все
          svg.icon
            use(xlink:href='./img/icons/sprite.svg#right-arrow')

      .swiper-container
        .swiper-wrapper
          img(src="./img/line.svg", alt="line").parallax-product-slider__line
          .swiper-slide
            a(href="#").product-category-block
              .image.image_contain
                img(data-src="./img/categories/1.png", alt="image").lazyload
              h6.product-category-block__title Орехи
          .swiper-slide
            a(href="#").product-category-block
              .image.image_contain
                img(data-src="./img/categories/2.png", alt="image").lazyload
              h6.product-category-block__title Семена
          .swiper-slide
            a(href="#").product-category-block
              .image.image_contain
                img(data-src="./img/categories/3.png", alt="image").lazyload
              h6.product-category-block__title Сухофрукты
          .swiper-slide
            a(href="#").product-category-block
              .image.image_contain
                img(data-src="./img/categories/4.png", alt="image").lazyload
              h6.product-category-block__title Цукаты
          .swiper-slide
            a(href="#").product-category-block
              .image.image_contain
                img(data-src="./img/categories/5.png", alt="image").lazyload
              h6.product-category-block__title Чурчхела и лаваш
          .swiper-slide
            a(href="#").product-category-block
              .image.image_contain
                img(data-src="./img/categories/6.png", alt="image").lazyload
              h6.product-category-block__title Шоколад и мармелад
          .swiper-slide
            a(href="#").product-category-block
              .image.image_contain
                img(data-src="./img/categories/6.png", alt="image").lazyload
              h6.product-category-block__title Наборы подарочные

      .swiper-pagination 
  
  section.section
    .container
      include blocks/banner1

  section.section.about-section
    .container 
      h3 Компания «Семушка»
      .about-section__container 
        .about-section__video
          a(href="#video" data-modal='open' data-video='https://www.youtube.com/embed/-TB7V6MCXU4?autoplay=1').video-block.image.image_cover
            img(data-src="./img/Rectangle 117.jpg", alt="image").lazyload
            .icon
              svg
                use(xlink:href='./img/icons/sprite.svg#play')
        .about-section__text
          p В 2017 году в целях расширения производственных и складских площадей, а также оптимизации логистических процессов, производство «Семушки» переехало на новую площадку, расположенную в деревне Новосельцево Мытищинского района Подмосковья.
          p Суммарная площадь производства составляет около 6 тыс. кв. метров. Количество сотрудников составляет 120 человек, автопарк состоит из 20 грузовых и полу-грузовых автомашин. Производственное оборудование включает современные автоматизированные фасовочные линии.
          a(href="./o-kompanii.html").button.button_style-1 
            span Подробнее

  section.section.certificates-section
    .container 
      .section__head
        h3.section__title Наши сертификаты
      .section__container.certificates-section__container 
        +certificate('./img/certificates/1.jpg')
        +certificate('./img/certificates/2.jpg')
        +certificate('./img/certificates/3.jpg')
        +certificate('./img/certificates/4.jpg')
        +certificate('./img/certificates/5.jpg')

  section.section.items-slider
    .container 
      .section__head.items-slider__head 
        h3.section__title Наши сертификаты
      .swiper
        .swiper-button.swiper-button-prev(data-custom-interaction)
          svg.icon
            use(xlink:href='./img/icons/sprite.svg#right-arrow')
        .swiper-button.swiper-button-next(data-custom-interaction)
          svg.icon
            use(xlink:href='./img/icons/sprite.svg#right-arrow')
        .swiper-container(data-slides='2' data-md-slides='3' data-lg-slides='4' data-xl-slides='5')
          .swiper-wrapper
            .swiper-slide
              +certificate('./img/certificates/1.jpg')
            .swiper-slide
              +certificate('./img/certificates/2.jpg')
            .swiper-slide
              +certificate('./img/certificates/3.jpg')
            .swiper-slide
              +certificate('./img/certificates/4.jpg')
            .swiper-slide
              +certificate('./img/certificates/5.jpg')
        .swiper-pagination    


  section.section
    .container 
      .section__head.section__head_with-button
        h3.section__title.section__title_with-button Новости
        a(href="novosti.html").button.button_style-2.button_arrow
          span Смотреть все
          svg.icon
            use(xlink:href='./img/icons/sprite.svg#right-arrow')
      .news-grid
        +news-element('./img/News_pic_588x266 1.jpg', 'Экскурсия в магазин «Семушка»<br> на Мясницкой', 2)
        +news-element('./img/Mask Group.jpg', 'Открытие магазина «Семушка» в Москве')
        +news-element('./img/News_pic_282x266_2 1.jpg', 'Открытие сайта для оптовых покупателей')
        +news-element('./img/News_pic_282x266_3 1.jpg', 'Увеличение цены на чернослив и курагу')
        +news-element('./img/News_pic_282x266_4 1.jpg', 'Компания «Семушка» прошла сертификацию FSSC 22000 ')
        +news-element('./img/News_pic_588x266_1 1.jpg', 'Логистический кризис: цены на контейнерные перевозки резко увеличились', 2)
  
  include blocks/recipes-slider

  -var map_type = 1;
  include blocks/map
